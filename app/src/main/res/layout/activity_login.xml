<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/r10pfi9lhn1tk"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rbfc1hxi7sou"
                android:textColor="#343434"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="57dp"
                android:layout_marginBottom="49dp"
                android:layout_marginStart="31dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Iniciar Sesión"
                />
            <LinearLayout
                android:id="@+id/rvzn0fo1vzo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/rgs5tjo234lb"
                    android:layout_width="133dp"
                    android:layout_height="133dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rondpdhjio4m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="61dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rcsk8pq2serm"
                    android:textColor="#343434"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="GrouApp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ra9bt9egbk4v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="37dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/rtc8hizm1oj"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clear_squares"
                    android:hint="Usuario"
                    android:inputType="text"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:textColor="#2E2E2E"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rt282bsdnh7h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="46dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/r9xyncwzvxew"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clear_squares_two"
                    android:hint="Contraseña"
                    android:inputType="text"
                    android:paddingHorizontal="21dp"
                    android:paddingVertical="14dp"
                    android:textColor="#2E2E2E"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rrtjk1bw0o0r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="68dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/r5zgz8umxifp"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fucsia_squares"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/r8zh65mf0f2d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrar"
                        android:textColor="#F3FAFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/rf60d7tztp2"
                android:textColor="#2E2E2E"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="52dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="¿No estás registrado?"
                />
            <LinearLayout
                android:id="@+id/rl07ri71rk1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="78dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rkaqwcixgzjp"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clearblue_squares"
                    android:paddingVertical="13dp"
                    android:paddingHorizontal="23dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/r50bgwx2j46q"
                        android:textColor="#343434"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Crear Cuenta"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>